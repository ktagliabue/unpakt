<body id="plant-bg">
  <div id="login-form-wrapper"
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "login") do |f| %>
    <fieldset>

    <legend class="legend">Login</legend>

    <div class="input email-login">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, placeholder: 'E-mail' %>
      <span><i class="fa fa-envelope-o"></i></span>
    </div>

    <div class="input email-login">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
      <span><i class="fa fa-lock"></i></span>
    </div>
    <% if devise_mapping.rememberable? -%>
    <div class="input">
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <br>
      <%= render "devise/shared/links" %>
    </div>
    <% end -%>
    <div class="actions">
      <%= button_to new_closet_path, :class => "submit", :method => :get do %>
        <i class="fa fa-long-arrow-right"></i>
      <% end %>
    </div>
    <% end %>

    </fieldset>

    <div class="feedback">
    login successful <br />
    redirecting...
    </div>
  </div>
</body>



<script src="application.js"></script>
